@{
    ViewData["Title"] = "Number App";
}

<h1>Number App</h1>

<form asp-action="Index" method="post">
    <div class="form-group">
        <label for="inputNumber">Enter a number:</label>
        <input type="number" class="form-control" id="inputNumber" name="inputNumber" required>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

@if (ViewBag.MultipliedNumber != null)
{
    <h2>Results</h2>
    <p>n * 2: @ViewBag.MultipliedNumber</p>
    <p>(n * 2)^2: @ViewBag.MultipliedSquaredNumber</p>
}
